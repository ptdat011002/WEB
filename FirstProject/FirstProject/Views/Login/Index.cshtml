
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập hệ thống</title>
    <style>
        body{
            flex: 1;
        }
        .container{
            width: 100%;
            height: 100%;
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        fieldset{
            width: 300px;
        }
        div{
            margin-bottom: 10px;
        }
        div label {
            display: inline-block;
            width: 100px;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>Đăng nhập hệ thống</legend>
                <div>
                    <label>Tài khoản</label>
                    @Html.TextBox("username")
                </div>
                <div>
                    <label>Mật khẩu</label>
                    @Html.Password("password")
                </div>
                <div>
                    <input type="submit" value="Đăng nhập" style="margin-right: 20px" />
                    @Html.ActionLink("quên mật khẩu","ForgotPassword")
                </div>
                <div>
                    <span style="color: red">@ViewBag.Message</span>
                </div>
            </fieldset>
        }
    </div>
</body>
</html>
